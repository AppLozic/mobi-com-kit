<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.mobicomkit.sample.EcommerceFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/ecommerce_text1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button android:text="@string/ecommerce_ad_button" android:layout_height="wrap_content" android:layout_width="188dp"
        android:id="@+id/button_ad" android:background="@color/whitesmoke"/>

    <TextView
        android:layout_width="194dp"
        android:layout_height="52dp"
        android:text="@string/ecommerce_ad_text"
        android:id="@+id/textView"
        android:layout_gravity="right|top"
        android:gravity="center"
        android:background="@color/white" />

        </LinearLayout>

        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:padding="5dp">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="5dp">

            <Button
                android:id="@+id/button1" android:text="@string/ecommerce_button1_text"
                android:layout_width="0dp"
                android:layout_weight="1" android:background="#dcdcdc"
                android:textColor="#000000"
                android:padding="20dip" android:gravity="center"
                android:drawableTop="@drawable/ic_action"
                android:singleLine="true"
                />

            <Button
                android:id="@+id/button2" android:text="@string/ecommerce_button2_text"
                android:layout_width="0dp"
                android:layout_weight="1" android:background="#d3d3d3"
                android:textColor="#000000"
                android:padding="20dip" android:gravity="center"
                android:drawableTop="@drawable/ic_action1"
                android:singleLine="true"
                />

            <Button
                android:id="@+id/button3" android:text="@string/ecommerce_button3_text"
                android:layout_width="0dp"
                android:layout_weight="1" android:background="#cac9c9"
                android:textColor="#000000"
                android:padding="20dip" android:gravity="center"
                android:drawableTop="@drawable/ic_action2"
                android:singleLine="true"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="5dp">

            <Button
                android:id="@+id/button4" android:text="@string/ecommerce_button4_text"
                android:layout_width="0dp"
                android:layout_weight="1" android:background="#dcdcdc"
                android:textColor="#000000"
                android:padding="20dip" android:gravity="center"
                android:drawableTop="@drawable/ic_action3"
                android:singleLine="true"/>

            <Button
                android:id="@+id/button5" android:text="@string/ecommerce_button5_text"
                android:layout_weight="1" android:background="#d3d3d3"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:padding="20dip" android:gravity="center"
                android:drawableTop="@drawable/ic_action4"
                android:singleLine="true"/>

            <Button
                android:id="@+id/button6" android:text="@string/ecommerce_button6_text"
                android:layout_weight="1" android:background="#cac9c9"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:padding="20dip" android:gravity="center"
                android:drawableTop="@drawable/ic_action5"
                android:singleLine="true"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="5dp">

            <Button
                android:id="@+id/button7" android:text="@string/ecommerce_button7_text"
                android:layout_weight="1" android:background="#dcdcdc"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:padding="20dip" android:gravity="center"
                android:drawableTop="@drawable/ic_action6"
                android:singleLine="true"/>

            <Button
                android:id="@+id/button8" android:text="@string/ecommerce_button8_text"
                android:layout_weight="1" android:background="#d3d3d3"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:padding="20dip" android:gravity="center"
                android:drawableTop="@drawable/ic_action7"
                android:singleLine="true"/>

            <Button
                android:id="@+id/button9" android:text="@string/ecommerce_button9_text"
                android:layout_weight="1" android:background="#cac9c9"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:padding="20dip" android:gravity="center"
                android:drawableTop="@drawable/ic_action8"
                android:singleLine="true"/>

        </TableRow>

        </TableLayout>

            <Button android:text="@string/ecommerce_chat_button" android:layout_height="wrap_content" android:layout_width="188dp"
                android:id="@+id/button_chat" android:background="@color/holo_blue"
                android:onClick="startChat"
                android:layout_gravity="center"/>

    </LinearLayout>

</FrameLayout>
