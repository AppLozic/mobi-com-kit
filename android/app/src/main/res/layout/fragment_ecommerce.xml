<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.mobicomkit.sample.EcommerceFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button android:text="Post Free Ad" android:layout_height="wrap_content" android:layout_width="188dp"
        android:id="@+id/button_ad" android:background="@color/link_text_material_light"/>

    <TextView
        android:layout_width="194dp"
        android:layout_height="52dp"
        android:text="Free Advertise"
        android:id="@+id/textView"
        android:layout_gravity="right|top"
        android:gravity="center"
        android:background="@color/white" />

        </LinearLayout>

        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:padding="5dp">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="5dp">

            <Button
                android:id="@+id/button1" android:text="Gadgets"
                android:layout_width="0dp"
                android:layout_weight="1" android:background="#dcdcdc"
                android:textColor="#000000"
                android:padding="20dip" android:gravity="center"
                android:drawableTop="@drawable/ic_action"
                android:singleLine="true"
                />

            <Button
                android:id="@+id/button2" android:text="Home"
                android:layout_width="0dp"
                android:layout_weight="1" android:background="#d3d3d3"
                android:textColor="#000000"
                android:padding="20dip" android:gravity="center"
                android:drawableTop="@drawable/ic_action1"
                android:singleLine="true"
                />

            <Button
                android:id="@+id/button3" android:text="PC"
                android:layout_width="0dp"
                android:layout_weight="1" android:background="#cac9c9"
                android:textColor="#000000"
                android:padding="20dip" android:gravity="center"
                android:drawableTop="@drawable/ic_action2"
                android:singleLine="true"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="5dp">

            <Button
                android:id="@+id/button4" android:text="BagPacks"
                android:layout_width="0dp"
                android:layout_weight="1" android:background="#dcdcdc"
                android:textColor="#000000"
                android:padding="20dip" android:gravity="center"
                android:drawableTop="@drawable/ic_action3"
                android:singleLine="true"/>

            <Button
                android:id="@+id/button5" android:text="Watches"
                android:layout_weight="1" android:background="#d3d3d3"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:padding="20dip" android:gravity="center"
                android:drawableTop="@drawable/ic_action4"
                android:singleLine="true"/>

            <Button
                android:id="@+id/button6" android:text="Mobiles"
                android:layout_weight="1" android:background="#cac9c9"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:padding="20dip" android:gravity="center"
                android:drawableTop="@drawable/ic_action5"
                android:singleLine="true"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="5dp">

            <Button
                android:id="@+id/button7" android:text="Car"
                android:layout_weight="1" android:background="#dcdcdc"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:padding="20dip" android:gravity="center"
                android:drawableTop="@drawable/ic_action6"
                android:singleLine="true"/>

            <Button
                android:id="@+id/button8" android:text="Games"
                android:layout_weight="1" android:background="#d3d3d3"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:padding="20dip" android:gravity="center"
                android:drawableTop="@drawable/ic_action7"
                android:singleLine="true"/>

            <Button
                android:id="@+id/button9" android:text="Music"
                android:layout_weight="1" android:background="#cac9c9"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:padding="20dip" android:gravity="center"
                android:drawableTop="@drawable/ic_action8"
                android:singleLine="true"/>

        </TableRow>

        </TableLayout>

            <Button android:text="Chat" android:layout_height="wrap_content" android:layout_width="188dp"
                android:id="@+id/button_chat" android:background="@color/link_text_material_light"
                android:onClick="startChat"/>

    </LinearLayout>

</FrameLayout>
